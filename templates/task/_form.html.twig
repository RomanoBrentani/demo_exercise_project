
<div class="d-flex justify-content-around m-2 ">
    <div class="align-self-center card">
        {{ form_start(form) }}
            <div class="card-header">
                <h1>Create a new Task</h1>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    {{ form_row(form.title) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.description) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.finishingDate) }}
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary">{{ buttonLabel }}</button>
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}

    </div>
</div>